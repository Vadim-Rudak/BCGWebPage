            window.onUnityLoadingProgressChanged = function(progress) {
			
				if (window.getPlatformId == 'vk'){
					loadingText.innerHTML = Math.ceil(progress * 100) + '%'
				}else{
					if (Math.ceil(progress * 100)<90)
					{
						if (Math.ceil(progress * 100)<10)
						{
							loadingTextInfo3.innerHTML = ""
							loadingTextInfo2.innerHTML = ""
							loadingTextInfo1.innerHTML = "Загрузка..."
						}else if (Math.ceil(progress * 100)<20)
						{
							loadingTextInfo3.innerHTML = ""
							loadingTextInfo2.innerHTML = ""
							loadingTextInfo1.innerHTML = "Чешем за ушком..."
						}else if (Math.ceil(progress * 100)<40)
						{
							loadingTextInfo3.innerHTML = ""
							loadingTextInfo2.innerHTML = "Подгружаем"
							loadingTextInfo1.innerHTML = "лабиринты..."
						}else if (Math.ceil(progress * 100)<60)
						{
							loadingTextInfo3.innerHTML = "Проверяем"
							loadingTextInfo2.innerHTML = "комиксы на"
							loadingTextInfo1.innerHTML = "ошибки..."
						}else if (Math.ceil(progress * 100)<80)
